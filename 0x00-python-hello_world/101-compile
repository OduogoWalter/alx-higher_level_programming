#!/usr/bin/python3
import py_compile
import os

def display_bytecode(filename):
    with open(filename, 'rb') as pyc_file:
        bytecode = pyc_file.read()
        hex_representation = ' '.join([f"{byte:02x}" for byte in bytecode])
        print(hex_representation)

if 'PYFILE' in os.environ:
    py_file = os.environ['PYFILE']
    pyc_file = py_file + 'c'
    py_compile.compile(py_file, cfile=pyc_file)
    print(f'Compiling {py_file} ...')


    # Now, let's display the bytecode in hexadecimal
    display_bytecode(pyc_file)
else:
    print("PYFILE environment variable is not set.")
